<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_escudo_cruzeiro"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cruzeiro_logo_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Escudo do Cruzeiro" />

        <TextView
            android:id="@+id/text_view_time_casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cruzeiro"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/image_view_escudo_cruzeiro"
            app:layout_constraintTop_toTopOf="@id/image_view_escudo_cruzeiro"
            app:layout_constraintBottom_toTopOf="@id/text_view_data"/>

        <TextView
            android:id="@+id/text_view_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toEndOf="@id/text_view_time_casa"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_time_casa"/>

        <TextView
            android:id="@+id/text_view_adversario_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/text_view_vs"
            app:layout_constraintTop_toTopOf="@id/text_view_time_casa"
            app:layout_constraintEnd_toStartOf="@id/image_view_escudo_adversario"
            android:layout_marginEnd="8dp"
            tools:text="Flamengo" />

        <TextView
            android:id="@+id/text_view_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@id/text_view_time_casa"
            app:layout_constraintTop_toBottomOf="@id/text_view_time_casa"
            tools:text="02/06/2025" />

        <ImageView
            android:id="@+id/image_view_escudo_adversario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_shield"
            app:layout_constraintEnd_toStartOf="@id/image_view_seta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:contentDescription="Escudo do AdversÃ¡rio" />

        <ImageView
            android:id="@+id/image_view_seta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            app:tint="?attr/colorControlNormal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:importantForAccessibility="no" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
