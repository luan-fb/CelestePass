<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLowest"
    tools:context=".ui.view.DetalhesJogoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Cabeçalho Azul -->
            <View
                android:id="@+id/header_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_header_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/image_view_cruzeiro_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_cruzeiro_logo_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_view_resumo_title"
                android:contentDescription="Escudo do Cruzeiro"/>

            <TextView
                android:id="@+id/text_view_nome_jogo_detalhes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/image_view_cruzeiro_logo"
                app:layout_constraintEnd_toStartOf="@id/image_view_adversario_logo"
                app:layout_constraintTop_toTopOf="@id/image_view_cruzeiro_logo"
                app:layout_constraintBottom_toBottomOf="@id/image_view_cruzeiro_logo"
                tools:text="Cruzeiro vs. Flamengo - 31/05/2025"/>

            <ImageView
                android:id="@+id/image_view_adversario_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_view_cruzeiro_logo"
                app:layout_constraintBottom_toBottomOf="@id/image_view_cruzeiro_logo"
                android:contentDescription="Escudo do Adversário"/>

            <TextView
                android:id="@+id/text_view_resumo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Resumo"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view_cruzeiro_logo" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_header_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="160dp"/>

            <!-- Cards de Resumo -->
            <LinearLayout
                android:id="@+id/layout_cards_resumo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_resumo_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Card Investido -->
                <include layout="@layout/item_card_resumo" android:id="@+id/card_investido"/>
                <!-- Card Vendido -->
                <include layout="@layout/item_card_resumo" android:id="@+id/card_vendido"/>
                <!-- Card Lucro -->
                <include layout="@layout/item_card_resumo" android:id="@+id/card_lucro"/>
            </LinearLayout>

            <!-- Conteúdo Principal (Abas) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/background_rounded_top"
                android:elevation="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_header_end">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_detalhes_jogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabMode="fixed" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_detalhes_jogo"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" /> <!-- Altura ajustável -->
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_detalhes_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Adicionar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>